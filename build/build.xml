				<include name="curvesapi-1.04.jar" />
				<include name="poi-ooxml-3.17.jar" />
				<include name="junit-4.12.jar" />
			</fileset>
		</copy>

		<!-- Copy project references -->

		<!-- Copy project sources itself -->
		<copy todir="build/src">
			<fileset dir="project/src">
				<include name="**/*" />
			</fileset>
		</copy>

		<javac includeantruntime="false" source="1.8" target="1.8" srcdir="build/src" destdir="build/classes" encoding="Cp1250">
			<classpath>
				<fileset dir="build/libs">
					<include name="*" />
				</fileset>
			</classpath>
		</javac>

		<!-- Copy over none Java-Files -->
		<copy todir="build/classes">
			<fileset dir="project/src">
				<exclude name="**/*.java" />
			</fileset>
		</copy>


	</target>
	<target name="do-deploy" depends="setup-staging-area, do-compile, init-fx-tasks">
		<delete file="dist" />
		<delete file="deploy" />

		<mkdir dir="dist" />
		<mkdir dir="dist/libs" />

		<copy todir="dist/libs">
			<fileset dir="externalLibs">
				<include name="*" />
			</fileset>
		</copy>


		<fx:resources id="appRes">
			<fx:fileset dir="dist" includes="ManufactureCAT.jar" />
			<fx:fileset dir="dist" includes="libs/*" />
		</fx:resources>

		<fx:application id="fxApplication" name="Manufacture CAT" mainClass="main.Main" />

		<mkdir dir="build/classes/META-INF" />



		<fx:jar destfile="dist/ManufactureCAT.jar">
			<fx:application refid="fxApplication" />
			<fileset dir="build/classes">
			</fileset>
			<fx:resources refid="appRes" />

			<manifest>
				<attribute name="Implementation-Vendor" value="Stanisï¿½aw Rusnak" />
				<attribute name="Implementation-Title" value="Manufacture CAT" />
				<attribute name="Implementation-Version" value="1.0" />
				<attribute name="JavaFX-Feature-Proxy" value="None" />
			</manifest>
		</fx:jar>




	</target>
